<div class="container-fluid text-center">

<h2>アーカイブ</h2>

<div class="row">
<div class="col-1"></div>
<div class="col-10 d-flex justify-content-center">

<table>
  <thead>
  <tr>
      
  <th>会議名</th>
  <th>開催日</th>
  <th>ステータス</th>
  <th>メモ（議事録）</th>
  <th>フィードバック</th>
  <th>開始時間</th>
  <th>終了時間</th>
  <th>修正</th>
  <th>削除</th>
 
    
  </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
      <td><%= meeting.name %></td>
      <td><%= meeting.start_meeting.strftime("%-m月%-d日") %></td>
      <td><%= meeting.goal %></td>
      <td><%= meeting.minutes %></td>
      <td><%= meeting.status %></td>
      <td><%= meeting.start_meeting.strftime("%-H時%-M分") %></td>
      <td><%= meeting&.end_meeting&.strftime("%-H時%-M分") %></td>



        
        <td><%= link_to '編集', edit_meeting_path(meeting) %></td>
        <td><%= link_to '削除', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<div class="col-1"></div>
</div>