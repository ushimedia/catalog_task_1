<div class="container-fluid text-center">

<h2>アーカイブ</h2>

<div class="row">

<div class="col-12 d-flex justify-content-center">
<div>
<table>
  <thead>
  <tr>
      
  <th>会議名</th>
  <th> <%= sort_link(@q, :start_meeting, "開催日") %></th>
  <th>ゴール</th>
  <th> <%= sort_link(@q, :status, "ステータス") %></th>
  <th>メモ（議事録）</th>
  <th>会議開始</th>
  <th>会議終了</th>
  <th>予定時間</th>
  <th>進行画面に戻る</th>
  <th>修正</th>
  <th>削除</th>
 
  
  </tr>
  </thead>

  <tbody>
    <% @meetings.each do |meeting| %>
      <tr>
      
      <td><%= meeting.name %></td>
      <td><%= meeting.start_meeting.strftime("%-m月%-d日") %></td>
      <td><%= meeting.goal %></td>
      <td><%= meeting.status %></td>
      <td><%= meeting.minutes %></td>
      <td><%= meeting.start_meeting.strftime("%-H時%-M分") %></td>
      <td><%= meeting&.end_meeting&.strftime("%-H時%-M分") %></td>
      <td><%= meeting.hold_time %>分</td>
      <td><%= link_to '進行画面に戻る', meeting %></td>
      <td><%= link_to '編集', edit_meeting_path(meeting) %></td>
      <td><%= link_to '削除', meeting, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
  

</table>
</div>
<br>

</div>
</div>
<div>
<%= paginate @meetings %>
</div>

</div>